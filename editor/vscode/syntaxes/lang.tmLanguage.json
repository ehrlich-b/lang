{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Language",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#constants" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.lang",
          "match": "//.*$"
        },
        {
          "name": "comment.block.lang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lang",
          "match": "\\b(if|else|while|return)\\b"
        },
        {
          "name": "keyword.declaration.lang",
          "match": "\\b(func|var|struct)\\b"
        },
        {
          "name": "keyword.other.lang",
          "match": "\\b(syscall)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.lang",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|bool|void)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.lang",
          "match": "\\b(true|false|nil)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.lang",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.lang",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.lang",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.lang",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.lang",
          "match": "(:=|=)"
        },
        {
          "name": "keyword.operator.pointer.lang",
          "match": "(&|\\*)"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.lang",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    }
  },
  "scopeName": "source.lang"
}
